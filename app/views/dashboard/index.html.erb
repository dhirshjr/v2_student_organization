<h1><%= link_to @city.name, city_path(@city) %> - Today is <%= Date.today.strftime('%m/%d/%Y') %></h1>

<div class="row">
    <% @days.each do |day| %>
    <div class="col s12 m6 l6">
      <h3><%= link_to "Cohort Name: #{day.cohort.start_date}", cohort_day_path(day.cohort.id, day.id)%></h3>
        <% day.groups.each do |daygroup| %>
          <div class="row">
            <div class="col s12 m12 l10">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title"><%= daygroup.name %></span>
                  <p>
                    <ul class="collection black-text">
                      <% daygroup.students.each do |student| %>
                        <li class="collection-item"><%= student.name %></li>
                      <% end %>
                    </ul>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

    </div>
    <% end %>
</div>
