<h1><%= @cohort.start_date %></h1>



<ul class="collection with-header">
  <li class="collection-header"><h4>Cohort Days</h4></li>
  <% @days.each do |day| %>
    <li class="collection-item"><%= link_to day.name, cohort_day_path(@cohort.id, day.id), class: "btn btn-primary" %>  <%= link_to "Delete", cohort_day_path(@cohort, day), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn materialize-red right" %> <%= link_to "Edit", edit_cohort_day_path(@cohort, day), class: "btn right" %></li>
  <% end %>
</ul>

<div class="row">
  <div class="col s8 ">
    <h3>Create a new day</h3>

    <%= render partial: 'days/form', locals: { cohort: @cohort, day: @cohort.days.build } %>
  </div>
</div>
