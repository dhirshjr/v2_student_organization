<%= simple_form_for(cohort) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date, as: :string, label: "Start Date", input_html: { class: 'datepicker' } %>
    <%= f.input :end_date, as: :string, label: "End Date", input_html: { class: 'datepicker' } %>
    <%= f.input :course_name %>
    <%= f.association :users, collection: cohort.city.users.order(:last_name), label: "Cohort Staff" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
