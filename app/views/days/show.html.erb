<h1><%= @day.name %></h1>


<% if @day.groups.present? %>
  <div class="row">
    <div class="col s12 m5">
      <% @day.groups.each do |daygroup| %>
      <div class="card-panel teal">
        <span class="white-text">
          <%= daygroup.name %>
        </span>
      </div>
      <% end %>
    </div>
  </div>
<% else %>

<% end %>


<%= simple_form_for([@day.cohort, @day, @day.groups.build]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<ul class="collection with-header">
  <li class="collection-header"><h4><%= @day.cohort.start_date %> Cohort <%= @day.cohort.students.count %> Students</h4></li>
  <% @day.cohort.students.each do |student| %>
    <li class="collection-item"><%= student.name %></li>
  <% end %>
</ul>
