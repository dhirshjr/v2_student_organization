
<%= simple_form_for([cohort, day, group]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :user, collection: @cohort.users, prompt: "Choose a Facilitator" %>
    <%= f.association :campus_area, collection: current_user.city.campus_areas.all, prompt: "Where will this group be?" %>
    <%= f.input :start_time, as: :time, html5: true %>
    <%= f.input :end_time, as: :time, html5: true %>
    <div class="row">
      <div class="col s4">
        <%= f.input :review %>
      </div>
      <div class="col s4">
        <%= f.input :one_on_one %>
      </div>
      <div class="col s4">
        <%= f.input :ai_session %>
      </div>
    </div>
    <div class="input-field">
      <%= f.input :description, as: :text, html: { id: 'textarea' } %>
    </div>


  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
