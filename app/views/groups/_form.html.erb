
<%= simple_form_for([cohort, day, group]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%# f.input :name %>
    <%= f.association :activities, collection: day.activities.all.order(:name), prompt: "Choose an activity for the group", label: "Activity Name" %>
    <%= f.association :users, collection: @cohort.users, prompt: "Choose a Facilitator" %>
    <%= f.association :campus_area, collection: current_user.city.campus_areas.all, prompt: "Where will this group be?" %>
    <%= f.input :start_time, as: 'string', input_html: { class: 'pick_that_time', id: 'start_time'} %>
    <%= f.input :end_time, as: 'string', input_html: { class: 'pick_that_time', id: 'end_time'} %>
    <div class="row">
      <div class="col s3">
        <%= f.input :review %>
      </div>
      <div class="col s3">
        <%= f.input :one_on_one %>
      </div>
      <div class="col s3">
        <%= f.input :ai_session %>
      </div>
      <div class="col s3">
        <%= f.input :add_all_students %>
      </div>
      <div class="col s3">
        <%= f.input :advancement %>
      </div>
      <div class="col s3">
        <%= f.input :remediation %>
      </div>
    </div>
    <div class="input-field">
      <%= f.input :description, as: :text, html: { id: 'textarea' }, label: "Additional Info" %>
    </div>
  </div>


  <div class="row">
    <div class="col s12 m6 l6 range-field">
      <%= f.input :rigor_score, as: :range, input_html: {id: "test5", min: "0", max: "10"} %>
    </div>
  </div>


  <div class="row">
    <div class="col s12 m6 l6">
      <%= f.association :students, collection: @cohort.students.order(:last_name), prompt: "Add Students to Group" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
